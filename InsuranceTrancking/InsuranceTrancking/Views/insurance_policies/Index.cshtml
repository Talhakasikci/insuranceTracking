<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Insurance Policies Index</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container my-5">
        <h2 class="mb-4">Insurance Policies Index</h2>

        <p>
            <a href="@Url.Action("Create", "insurance_policies")" class="btn btn-primary">Create New</a>
        </p>

        <table class="table table-bordered table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Policy Number</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Coverage Type</th>
                    <th>Vehicle ID</th>
                    <th>Customer ID</th>
                    <th>Insurance Company ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.PolicyNumber</td>
                        <td>@item.StartDate.ToShortDateString()</td>
                        <td>@item.EndDate.ToShortDateString()</td>
                        <td>@item.CoverageType</td>
                        <td>@item.VehicleID</td>
                        <td>@item.CustomerID</td>
                        <td>@item.InsuranceCompanyID</td>
                        <td>
                            <a href="@Url.Action("Edit", "insurance_policies", new { id = item.PolicyID })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("Details", "insurance_policies", new { id = item.PolicyID })" class="btn btn-sm btn-info">Details</a>
                            <a href="@Url.Action("Delete", "insurance_policies", new { id = item.PolicyID })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>